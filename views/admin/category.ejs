<%-include("./layout/admin header.ejs") %>  

            
          
            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="col d-flex justify-content-end">
                            <a href="addcategory" class="btn btn-danger mt-4 mb-4" >Add Category</a>
                      </div>
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Category Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">NO</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% categoryList.forEach(function(categoryList,index){ %> 
                                        <tr>
                                            <th scope="row"><%=index+1 %>  </th>
                                            <td><%=categoryList.name %> </td>
                                            <td><%=categoryList.description %> </td>
                                            <td>
                                                <% if (categoryList.access) {%> 
                                                <a href="/admin/disable/<%=categoryList._id %> " 
                                                    class="btn btn-danger"
                                                     onclick = "return confirm('Are you want disable <%=  categoryList.name%>')">Disable</a>
                                                <% }  else { %> 
                                                    <a href="/admin/enable/<%=categoryList._id %> " 
                                                        class="btn btn-danger" 
                                                        onclick = "return confirm('Are you want enable <%=  categoryList.name%>')">Enable</a>
                                                    <% } %> 
                                            </td>
                                        </tr>
                                        <% }) %> 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                    
            <!-- Table End -->

        <!-- Content End -->

     
        <%-include('./layout/admin footer.ejs') %> 
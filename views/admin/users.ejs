<%-include("./layout/admin header.ejs") %> 
       
    
    

             <!-- Table Start -->
             <section>
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Users Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">NO</th>
                                            <th scope="col">First Name</th>
                                            <th scope="col">Last Name</th>
                                            <th scope="col">email</th>
                                            <th scope="col">phone number</th>
                                            <!-- <th scope="col">Discount</th>
                                            <th scope="col">Size</th> -->
                                            <!-- <th scope="col">Image</th>
                                            <th scope="col">Discriptiom</th>-->
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach(function(users,index){ %> 
                                        <tr>
                                            <th scope="row"><%=index+1 %>  </th>
                                            <td><%=users.fristName%> </td>
                                            <td><%=users.lastName%> </td>
                                            <td><%=users.email%> </td>
                                            <td><%=users.phone%> </td>
                                            <td>
                                                <% if (users.access) {%> 
                                                <a href="/admin/block/<%=users._id %> " 
                                                    class="btn btn-danger"
                                                     onclick = "return confirm('Are you want block <%=  users.name%>')">Block</a>
                                                <% }  else { %> 
                                                    <a href="/admin/unblock/<%=users._id %> " 
                                                        class="btn btn-danger" 
                                                        onclick = "return confirm('Are you want unblock <%=  users.name%>')">Unblock</a>
                                                    <% } %> 
                                            </td>
                                        </tr>
                                        <% }) %> 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
            <!-- Table End -->
            <%-include('./layout/admin footer.ejs') %> 
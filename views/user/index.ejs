
<%-include("./layout/user header.ejs") %> 
    <!-- banner Section Begin -->
    <%if(emailSent) {%>
        <% if(emailSent.length){%> 
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
            <div>
               <h2><%=emailSent %></h2> 
            </div>
          </div>
        <% }%>
          <% } %>   
    <section class="hero">
        <% bannerzz.forEach(function(bannerzz,index){ %> 
        <div class="hero__slider owl-carousel">
            <div class="hero__items set-bg" data-setbg="/image/productImages/<%=bannerzz.image%>">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6><%=bannerzz.title%> Collection</h6>
                                <h2><%=bannerzz.mainTitle%></h2>
                                <p><%=bannerzz.description%> </p>
                                <a href="<%=bannerzz.url%>" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %> 
        </div>
    </section>
    <!-- banner Section End -->

    <!-- category Section Begin -->
    <section class="banner spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 offset-lg-4">
                    <div class="banner__item">
                        <div class="banner__item__pic">
                            <img src="/image/productImages/<%=categories[0].image%>" height="400px" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2><%=categories[0].name%> collections </h2>
                            <a href="/productShow/<%=categories[0]._id%>">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="banner__item banner__item--middle">
                        <div class="banner__item__pic">
                            <img src="/image/productImages/<%=categories[1].image%>" alt="" style="width: 400px;">
                        </div>
                        <div class="banner__item__text">
                            <h2> <%=categories[1].name%> collections</h2>
                            <a href="/productShow/<%=categories[1]._id%>">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="banner__item banner__item--last">
                        <div class="banner__item__pic">
                            <img src="/image/productImages/<%=categories[2].image%>" height="400px" alt="" style="width: 400px;">
                        </div>
                        <div class="banner__item__text">
                            <h2><%=categories[2].name%> collections</h2>
                            <a href="/productShow/<%=categories[2]._id%>">Shop now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- category Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">Best Sellers</li>
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        <li data-filter=".hot-sales">Hot Sales</li>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                <% productList.forEach(function(productList,index){ %> 
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        
                        <div class="product__item__pic set-bg" data-setbg="/image/productImages/<%=productList.image[0] %> ">
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a href="/addToWishlist/<%= productList._id %> "><img src="/user/img/icon/heart.png" alt=""></a></li>
                                <li><a href="/singleView/<%=productList._id%>"> <i style="background-color: white; font-size: 18px; padding: 10px; margin-top: 2000px;" class="bi bi-arrows-move"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><%=productList.name %> </h6>
                            <a href="/addToCart/<%= productList._id %> " class="add-cart">+ Add To Cart</a>
                            <h5><%=productList.price %> </h5>
                            <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1">
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div> 
    </section>

    <%-include("./layout/user footer.ejs") %> 

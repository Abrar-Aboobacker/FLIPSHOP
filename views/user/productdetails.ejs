<%-include("./layout/user header.ejs") %> 

<!-- Shop Details Section Begin -->
<section class="shop-details">
    <div class="product__details__pic">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__breadcrumb">
                        <a href="/">Home</a>
                        <a href="/shop">Shop</a>
                        <span>Product Details</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg="/image/productImages/<%=viewproduct.image[0] %> ">
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg="/image/productImages/<%=viewproduct.image[1] %> ">
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg="/image/productImages/<%=viewproduct.image[2] %> ">
                                </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-4" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg="/image/productImages/<%=viewproduct.image[3] %> ">
                                   
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-6 col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src="/image/productImages/<%=viewproduct.image[0] %> " alt="">
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src="/image/productImages/<%=viewproduct.image[1] %> " alt="">
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src="/image/productImages/<%=viewproduct.image[2] %> " alt="">
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-4" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src="/image/productImages/<%=viewproduct.image[3] %> " alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="product__details__content">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="product__details__text">
                        <h4><%=viewproduct.name %> </h4>
                        <h3><%=viewproduct.price%> </h3>
                        <p><%=viewproduct.description%></p>
                        <div class="product__details__cart__option">
                            <a href="/addToCart/<%= viewproduct._id %>"class="primary-btn">add to cart</a>
                        </div>
                        <div class="product__details__btns__option">
                            <a href="/addToWishlist/<%= viewproduct._id %> "><i class="bi bi-heart"></i> add to wishlist</a>
                        </div>
                        <div class="product__details__last__option">
                            <ul>
                                <li><span>Categories:</span><%=viewproduct.category%> </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Details Section End -->
<%-include("./layout/user footer.ejs") %> 
